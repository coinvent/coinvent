spec Atom =   sort Int;  op 0:Int;  op suc: Int -> Int;  op pre: Int -> Int;  pred __<=__ : Int * Int;  forall x,y : Int   . (0 <= 0)   . (not (0 <= pre(0)))   . ((0 <= x) => (0 <= suc(x)))   . ((not (0 <= x)) => (not (0 <= pre(x))))   . ((suc(x) <= y) <=> (x <= pre(y)))   . ((pre(x) <= y) <=> (x <= suc(y)));  pred __<__ : Int * Int;  forall x,y : Int . ((x < y) <=> ((x <= y) /\ (not (x=y))));   pred __>__ : Int * Int;  forall x,y : Int . ((x < y) <=> (y > x));    sorts Object, Forces;  ops electron, nucleus : Object;  ops coulomb : Forces;  op mass : Object -> Int;  op distance : Object * Object -> Int;  op force : Forces * Object * Object -> Int;  .  (mass(nucleus) > mass(electron));  .  (distance(electron, nucleus) > 0);  .  (force(coulomb, electron, nucleus) > 0);end
